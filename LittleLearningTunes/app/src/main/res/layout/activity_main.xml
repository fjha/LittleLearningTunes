<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"

    android:background="@drawable/background"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity"
    style="@android:style/Holo.ButtonBar"
    android:outlineProvider="paddedBounds"
    android:transitionGroup="false"
    android:touchscreenBlocksFocus="false">

    <TextView android:text="Listen to  the Educational  Songs " android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:background="@drawable/button"
        android:id="@+id/buttonNumberSong"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text=" Number Song "
        style="@android:style/Holo.Light.ButtonBar"
        android:layout_centerHorizontal="true"
        />


    <Button

        android:id="@+id/buttonABC"
        android:background="@drawable/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        style="@android:style/Holo.Light.ButtonBar"
        android:layout_marginTop="180dp"
        android:text=" ABC Song " />

    <Button

        android:id="@+id/buttonSounds"
        android:background="@drawable/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        style="@android:style/Holo.Light.ButtonBar"
        android:layout_marginTop="260dp"
        android:text=" Sounds  Song " />

    <Button

        android:id="@+id/buttonOpposites"
        android:background="@drawable/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        style="@android:style/Holo.Light.ButtonBar"
        android:layout_marginTop="340dp"
        android:text=" Opposites Song " />

    <Button

        android:id="@+id/buttonShapes"
        android:background="@drawable/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        style="@android:style/Holo.Light.ButtonBar"
        android:layout_marginTop="420dp"
        android:text=" Shapes Song " />
</RelativeLayout>

